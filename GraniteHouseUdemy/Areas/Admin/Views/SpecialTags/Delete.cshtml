@model SpecialTags
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Edit Special Tag</h2>
<form method="post" asp-action="Delete">
    @*We can ommit the asp-action if we have kept the same name for the action and the view*@
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>@*Here we do not need to define the area because the action is located in the same area*@
        </div>
    </div>
</form>
