@model SpecialTags
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Special Tag</h2>
<form method="post" asp-action="Edit">
    @*We can ommit the asp-action if we have kept the same name for the action and the view*@
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>@*Here we do not need to define the area because the action is located in the same area*@
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");} @*this partial view contains all the necessary javascripts for the validation. asp .net has already taken care of the addition of these scripts in the creation of the website*@
}
