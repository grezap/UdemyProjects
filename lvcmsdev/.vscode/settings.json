{
    "php.suggest.basic": false,
    "deploy": {
        "button": {
            "enabled": true,
            "text": "Deploy Local",
            "packages":[
                "lvcmsdev"
            ]
        },
        "packages": [
            {
                "name":"lvcmsdev",
                "deployOnSave": true,
                "files":[
                    "/app/*",
                    "/app/*/*.*",
                    "/app/*/*/*.*",
                    "/app/*/*/*/*.*",
                    "/bootstrap/*.*",
                    "/bootstrap/*/*.*",
                    "/config/*.*",
                    "/database/*/*.*",
                    "/public/*.*",
                    "/public/*/*.*",
                    "/resources/*/*.*",
                    "/resources/*/*/*.*",
                    "/resources/*/*/*/*.*",
                    "/routes/*.*",
                    "/storage/*/*.*",
                    "/storage/*/*/*.*",
                    "/artisan",
                    "/package.json",
                    "/server.php",
                    "/webpack.mix.js"
                ],
                "targets":[
                    "apache dev"
                ]
            }
        ],
        "targets": [
            {
                "type": "local",
                "name": "apache dev",
                "description": "local apache deelopment directory",
                "dir": "C:/Program Files/Apache24/htdocs/lvcmsdev"
            }
        ]
    }
}